<div class="container">
  <div class="col-xs-12">
    <h3>Users List</h3>


    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to(user.name, user_path(user), :target => '_blank') %></td>
            <td><%= link_to "delete", user_path(user), method: "delete", data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New User', :controller => 'users', :action => 'new' %>

  </div>
</div>